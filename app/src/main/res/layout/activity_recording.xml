<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recording_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recording_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_margin="50dp"
            android:src="@drawable/med_03_circle" />

        <ImageView
            android:id="@+id/id_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="50dp"
            android:src="@drawable/med_01_circle" />

        <ImageView
            android:id="@+id/id_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_margin="50dp"
            android:src="@drawable/med_04_circle" />

        <ImageView
            android:id="@+id/id_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="50dp"
            android:src="@drawable/med_02_circle" />

        <ImageView
            android:id="@+id/ring_0"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_margin="90dp"
            android:src="@drawable/small_white_ring" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/dummy_recording_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="dummyToggleRecording"
            android:textOff="@string/toggle_recording_off"
            android:textOn="@string/toggle_recording_on" />

        <Button
            android:id="@+id/dummy_stop_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="dummyStopRecording"
            android:text="@string/button_stop" />

        <Button
            android:id="@+id/dummy_finish_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="dummyFinishRecording"
            android:text="@string/button_finish" />

    </LinearLayout>

</LinearLayout>